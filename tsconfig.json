{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
   "types": [
      "node", 
      "express", 
      "cors", 
      "passport", 
      "http-status-codes", 
      "sequelize", 
      "dotenv", 
      "bcryptjs", 
      "uuid"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": "./",
    "module": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "server.ts"],
  "exclude": ["node_modules"]
}
