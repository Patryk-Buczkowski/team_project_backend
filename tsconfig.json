{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts", "app.ts"],
  "exclude": ["node_modules"]
}
